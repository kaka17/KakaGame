<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registbgMain"
    tools:context="com.kaka.smargame.ui.activity.BindPhoneActivity">

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@color/registbg"
        >

        <TextView
            android:id="@+id/tvGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/longbuttonbg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />
        <LinearLayout
            android:id="@+id/linPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvGoBack"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            >


            <EditText
                android:id="@+id/etPhone"
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:background="@drawable/etbgbyarc"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tvGetNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:padding="6dp"
                android:background="@drawable/longbuttonbg"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linPhone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            >


            <EditText
                android:id="@+id/etNum"
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:background="@drawable/etbgbyarc"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="输入验证码"
                android:textColor="@color/white"
                android:padding="6dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btSure"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linNum"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/longbuttonbg"
            android:text="确定"
            />

    </RelativeLayout>


</RelativeLayout>
